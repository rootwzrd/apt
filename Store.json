[
	{
		"name": "mysql",
    "type": "Database server",
    "latest": "5.6.14",
    "$latest": {
      "scrape": {
        "from": "http://dev.mysql.com/downloads/mysql/",
        "search": "mysql-(\\d+\\.\\d+\\.\\d+)-linux-glibc.-x86_64\\.tar\\.gz",
        "extract": 1,
        "group": false
      }
    },
    "versions": ["5.6.14"],
    "dependencies": {},
		"install": {
      "5.*": {
        "get": {
          "download": {
            "url": "http://cdn.mysql.com/Downloads/MySQL-{{major version}}.{{minor version}}/mysql-{{version}}-linux-glibc2.5-x86_64.tar.gz",
            "compression": "gzip"
          }
        },
        "build": {
          "cmake": {
            "configure": {
              "prefix": {
                "description": "install architecture-independent files in PREFIX",
                "default": {
                  "vendor": "/usr/local",
                  "apt": "{{install path}}"
                }
              },
              "datadir": {
                "description": "read-only architecture-independent data",
                "default": {
                  "vendor": "/var/lib/mysql",
                  "apt": "{{install path}}/data"
                }
              }
            }
          }
        }
      }
		}
	},
  {
    "name": "ncurses",
    "type": "Terminal emulator",
    "dependencies": {
      "5.*": {
        "gcc": "4.8.1"
      }
    },
    "install": {
      "5.*": {
        "get": {
          "download": {
            "url": "http://ftp.gnu.org/pub/gnu/ncurses/ncurses-5.{{minor version}}.tar.gz",
            "tarball": "gzip"
          }
        },
        "build": {
          "configure-make-install": {
            "configure": {
              "prefix": {
                "description": "install architecture-independent files in PREFIX",
                "default": {
                  "vendor": "/usr/local",
                  "apt": "{{install path}}"
                }
              }
            }
          }
        }
      }
    }
  },
  {
    "name": "gcc",
    "type": "C/C++ Compiler",
    "latest": "4.8.1",
    "versions": [ "4.8.1"],
    "dependencies2": {
      "4.x": {
        "gmp": "4.2.1",
        "mpfr": "2.4.0",
        "mpc": "0.8.1"
      }
    },
    "dependencies": {},
    "install": {
      "4.x": {
        "get": {
          "download": {
            "url": "ftp://ftp.fu-berlin.de/unix/languages/gcc/releases/gcc-{{version}}/gcc-{{version}}.tar.gz",
            "compression": "gzip"
          }
        },
        "build": {
          "configure-make-install": {
            "configure": {
              "$before": "contrib/download_prerequisites",
              "prefix": {
                "description": "install architecture-independent files in PREFIX",
                "default": {
                  "vendor": "--prefix=/usr/local",
                  "apt": "--prefix={{install path}}"
                }
              },
              "--disable-isl-version-check": {},
              "--disable-cloog-version-check": {}
            },
            "routine": [
              ["./contrib/download_prerequisites", "{{install path}}"],
              ["mkdir {{var path}}/gcc-objdir"],
              ["{{source path}}/configure {{configure options}}", "{{var path}}/gcc-objdir}}"],
              ["make", "{{var path}}/gcc-objdir}}"],
              ["make install", "{{var path}}/gcc-objdir}}"],
              ["make clean", "{{var path}}/gcc-objdir}}"]
            ]
          }
        }
      }
    }
  },
